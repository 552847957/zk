<window title="Live Grid" border="normal">
	<zscript>
		String[] data = new String[30];
		for(int j=0; j &lt; data.length; ++j) {
			data[j] = "option "+j;
		}
		ListModel strset = new SimpleListModel(data);
	</zscript>

	Live:
	<grid width="200px" height="100px" model="${strset}">
	</grid>

	<separator/>

	Live with header:
	<grid width="200px" height="100px" model="${strset}">
		<columns>
			<column label="options"/>
		</columns>
	</grid>

	<separator/>

	Static:
	<grid width="200px" height="100px">
		<rows>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
			<row>ab</row>
		</rows>
	</grid>
</window>
