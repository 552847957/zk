<window>
	<columnlayout id="cl">
		<columnchildren width="20%">
			<progressmeter value="30" />
		</columnchildren>
	</columnlayout>
	
<zscript>
	import org.zkoss.zkmax.zul.Columnchildren;
	
	Columnchildren[] cc = new Columnchildren[3];
	int count = 0;
	
	public void add() {
		if (count > 2) return;
		
		cc[count] = new Columnchildren();
		cc[count].setWidth("50%");
		cc[count].setMargins("5,5,5,5");
		cc[count].setParent(cl);
		count++;
	}
	public void remove() {
		if (count > 0)
			cc[--count].detach();
	}
</zscript>

	<button label="add" onClick="add()" />
	<button label="remove" onClick="remove()" />
</window>
