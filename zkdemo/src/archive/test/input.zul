<window title="test of input" border="normal">
  disabled: <textbox disabled="true"/>
  <separator/>
  readonly: <textbox readonly="true"/>
  <separator/>
  onChanging: <textbox onChanging="l.value = event.value" onChange='l.value = "[" + self.value + "]"'/>
  <label id="l"/>

  <separator/>
  no empty: <textbox constraint="no empty"/>
  <separator/>
  email:  <textbox constraint="/.+@.+\.[a-z]+/: e-mail only"/>
  <separator/>
  <zscript>
  constr = new SimpleConstraint(SimpleConstraint.NO_EMPTY, "EMPTY NOT ALLOWED");
  </zscript>
  no empty: <textbox constraint="${constr}"/>
</window>
