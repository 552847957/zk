<window title="Menu Sample">
	<menubar id="menubar">
		<menu label="File">
			<menupopup>
		        <menuitem label="New"/>
		        <menuitem label="Open"/>
		        <menuitem label="Save"/>
		        <menuseparator/>
		        <menuitem label="Exit"/>
			</menupopup>
		</menu>
		<menu label="Edit">
			<menupopup id="editPopup">
		        <menuitem label="Undo"/>
		        <menuitem label="Redo"/>
		        <menu label="Sort">
					<menupopup>
				        <menuitem label="Sort by Name" autoCheck="true"/>
				        <menuitem label="Sort by Date" autoCheck="true"/>
					</menupopup>
		        </menu>
			</menupopup>
		</menu>
		<menu label="Help">
			<menupopup>
		        <menuitem label="Index"/>
		        <menu label="About">
					<menupopup>
				        <menuitem label="About Componany"/>
				        <menuitem label="About Product"/>
				        <menuitem label="Go Potix with target" href="http://www.potix.com" target="new"/>
				        <menuitem label="Go Potix" href="http://www.potix.com"/>
					</menupopup>
		        </menu>
			</menupopup>
		</menu>
	</menubar>
	<button label="Add menuitem to Edit"
	onClick="new Menuitem(&quot;More&quot;).setParent(editPopup)"/>
	<button label="Add submenu to Edit">
		<attribute name="onClick">{
	var menu = new Menu("Submenu");
	menu.setParent(editPopup);
	var popup = new Menupopup();
	popup.setParent(menu);
	new Menuitem("Subitem").setParent(popup);
		}</attribute>
	</button>
	<button label="Add Window menu">
		<attribute name="onClick">{
	var menu = new Menu("Window");
	menu.setParent(menubar);
	var popup = new Menupopup();
	popup.setParent(menu);
	new Menuitem("Cascade").setParent(popup);
		}</attribute>
	</button>
	<button label="Change orient">
		<attribute name="onClick">
	menubar.setOrient(
		"horizontal".equals(menubar.getOrient()) ? "vertical": "horizontal");
		</attribute>
	</button>

	<button label="Change AutoPopup">
		<attribute name="onClick">
	menubar.setAutoPopup(!menubar.isAutoPopup());
		</attribute>
	</button>
	<datebox/>
</window>
