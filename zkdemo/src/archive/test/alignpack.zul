<window title="Test of align and pack dinamicly dynamically" border="normal"  width="250px">
<vbox>
 <hbox id="hb" pack="start" align="start" widths="150px,150px">
  <textbox width="50px"/>
  <textbox width="50px" rows="3"/>
 </hbox> 
 <vbox id="vb" pack="start" align="start" widths="50px,50px">
  <textbox/>
  <textbox rows="3"/>
 </vbox>
 <radiogroup id="rg">
 <attribute name="onCheck">
 	if(pack.isChecked()) {
 		hb.setPack(self.selectedItem.label);
 		vb.setPack(self.selectedItem.label);
 	}
 	if (align.isChecked()) {
 		hb.setAlign(self.selectedItem.label);
 		vb.setAlign(self.selectedItem.label);
 	}
 </attribute>
	<radio checked="true" label="start"/>
	<radio label="center"/>
	<radio label="end"/>
</radiogroup>

<checkbox id="pack" label="Pack">
	<attribute name="onCheck">
		if(self.isChecked()) {	 		
	 		hb.setPack(rg.selectedItem.label);
	 		vb.setPack(rg.selectedItem.label);
	 	}
	</attribute>
</checkbox>
<checkbox id="align" label="Align" >
	<attribute name="onCheck">
		if(self.isChecked()) {	 		
	 		hb.setAlign(rg.selectedItem.label);
	 		vb.setAlign(rg.selectedItem.label);
	 	}
	</attribute>
</checkbox>
 </vbox>
</window>
</hbox>