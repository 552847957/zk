<zk>
	<grid id="grid">
	<rows>
		<row>
	${empty arg.label ? 'Username': arg.label}
	<textbox/>
		</row>
	</rows>
	</grid>

	<!-- Notes:
	 1) macro-method must be at the page level, so <zk> must be used
	 2) self is the macro component when zscript is evaluated.
	-->
	<zscript>
	public class Username extends HtmlMacroComponent {
		void addRow(String label) {
			Row row = new Row(grid.getRows());
			new Label(label).setParent(row);
			new Textbox().setParent(row);
		}
	};
	</zscript>
</zk>
