<zscript> 

import java.util.ArrayList; 
import java.util.Calendar; 

public class Person {
	private String _firstName = "Hello";
	private String _lastName = "ZK";
	private int _id1, _id2;

	public Person() {
	}
	public Person(String firstName, String lastName, int id1, int id2) {
		_firstName = firstName;
		_lastName = lastName;
		_id1 = id1;
		_id2 = id2;
	}

	//accessor
	public void setFirstName(String f) {
		_firstName = f;
	}
	public String getFirstName() {
		return _firstName;
	}
	public void setLastName(String l) {
		_lastName = l;
	}
	public String getLastName() {
		return _lastName;
	}
	public String getFullName() {
		return _firstName + " " + _lastName;
	}

	public int getId1() {
		return _id1;
	}
	public void setId1(int id) {
		_id1 = id;
	}
	public int getId2() {
		return _id2;
	}
	public void setId2(int id) {
		_id2 = id;
	}

	public boolean isDisabled() {
		return false;
	}
	public boolean isEditable() {
		return false;
	}
}
 
ArrayList persons = new ArrayList(); 
Person selected = new Person(); 
 
persons.add(new Person("John", "Doe", 100, 200)); 
persons.add(new Person("Jean", "Marie", 150, 250)); 
persons.add(new Person("Marie", "Ann", 200, 300)); 
persons.add(new Person("Jean", "Claude", 250, 350)); 
 
AnnotateDataBinder binder = new AnnotateDataBinder(mainWin); 
binder.bindBean("persons", persons); 
binder.loadAll(); 
 
void dosomething() 
{ 
binder.loadAll(); 
} 
</zscript> 
