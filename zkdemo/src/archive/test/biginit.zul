<window>
	Test the peformance of init, show and hide a large number of components
	<zscript>
	List items = new org.zkoss.zkdemo.userguide.BigList(2000); //a big list of Integer
	</zscript>
	<groupbox width="200px" mold="3d" open="false">
		<caption label="Big List"/>

		<listbox rows="20">
			<listitem forEach="${items}">
			<listcell label="${each}-1"/>
			<listcell label="${each}-2"/>
			<listcell label="${each}-3"/>
			<listcell label="${each}-4"/>
			</listitem>
		</listbox>
	</groupbox>
</window>
