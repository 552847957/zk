<zk>
<window style="width:800px" border="normal" title="ZKOdeo - Listen Your Mp3 Music by ZK and Odeo">
<zscript>
	void reverseAutoPlay()
	{
		if(chk_auto.isChecked())
		{
			odeo.setAutoPlay(true);
		}
		else
		{
			odeo.setAutoPlay(false);
		}
	}
	
	void hideOrNot()
	{
		if(chk_hide.isChecked())
		{
			odeo.setVisible(false);
		}
		else
		{
			odeo.setVisible(true);
		}
	}
	
	void playSong()
	{
		odeo.setSongUrl("../mp3/"+songList.selectedItem.value);
		odeo.setAutoPlay(true);
		odeo.play();
	}
	

</zscript>
	<hbox>
	    <odeo id="odeo" skinColor="black" songUrl="Emergence - Michael David Crawford.mp3" autoPlay="true"  ></odeo>
	   	<checkbox id="chk_hide" onCheck="hideOrNot()" label="Hide player" ></checkbox>
   	</hbox>
   	<separator bar="true"/>
   	<hbox>
   	<label value="Skin:"></label>
   	<listbox onSelect="odeo.setSkinSize(self.selectedItem.value)" mold="select">
	   	<listitem label="standard" value="standard"></listitem>
   		<listitem label="midsize" value="midsize"></listitem>
   		<listitem label="tiny" value="tiny"></listitem>
   	</listbox>
   	<listbox onSelect="odeo.setSkinColor(self.selectedItem.value)" mold="select">
   		<listitem label="black" value="black"></listitem>
   		<listitem label="gray" value="gray"></listitem>
   	</listbox>	
   	</hbox>
   	<separator bar="true"/>
		<listbox onSelect="playSong()" id="songList">
		<listitem label ="Michael David Crawford - Emergence" value ="Emergence - Michael David Crawford.mp3" selected ="true" ></listitem>
		<listitem label ="DJ Spooky - Rebirth of a Nation 1" value ="rebirth_excerpt1.mp3" ></listitem>
	</listbox>
	<vbox>
	<label value="Notice: all mp3 files are licensed under a Creative Commons License " ></label>
	<label value="Michael David Crawford: http://www.geometricvisions.com/music/ " ></label>
	<label value="DJ Spooky: http://www.djspooky.com/art.html" ></label>
	</vbox>
</window>
<window  style="width:800px" border="normal" title="ZKTune - Listen Your Mp3 Music by ZK">
<zscript>
	void reverseAutoPlay()
	{
		if(chk_auto.isChecked())
		{
			xspf.setAutoPlay(true);
		}
		else
		{
			xspf.setAutoPlay(false);
		}
	}
	
	void hideOrNot()
	{
		if(chk_hide.isChecked())
		{
			xspf.setVisible(false);
		}
		else
		{
			xspf.setVisible(true);
		}
	}
	
	void playSong()
	{
		xspf.setSongUrl("../mp3/"+songList.selectedItem.value);
		xspf.setSongTitle(songList.selectedItem.label);
		xspf.play();
	}
	
	void stopSong()
	{
	}
	
</zscript>
	<hbox>
	    <xspfPlayer songUrl="mp3/Emergence - Michael David Crawford.mp3" id="xspf" visible="true" autoPlay="false" ></xspfPlayer>
	   	<checkbox id="chk_hide" onCheck="hideOrNot()" label="Hide player" ></checkbox>
	   	<button label ="Stop" onClick="xspf.stop()"    />
   	</hbox>
   	
   	<listbox onSelect="playSong()" id="songList">
		<listitem label ="Michael David Crawford - Emergence" value ="Emergence - Michael David Crawford.mp3" selected ="true" ></listitem>
		<listitem label ="DJ Spooky - Rebirth of a Nation 1" value ="rebirth_excerpt1.mp3" ></listitem>
	</listbox>
</window>
</zk>