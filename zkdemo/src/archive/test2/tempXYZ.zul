	<button label="addRow">
		<attribute name="onClick">
			Row rw = new Row(); rw.setParent(rows); 
			new Label("Column3").setParent(rw); 
			new Label("Column5").setParent(rw); 
			new Label("Column7").setParent(rw); 
			new Label("Column8").setParent(rw); 
			new Label("Column9").setParent(rw); 
