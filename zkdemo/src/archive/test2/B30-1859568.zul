<zk
	xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml">

	<window>

		<zscript><![CDATA[
		
		void rejig()
		{
		  Set set = listbox.getSelectedItems();
		  Iterator it = set.iterator();
		  StringBuffer b = new StringBuffer( "link" );

		  while ( it.hasNext() )
		    b.append(".").append( it.next().getLabel() );
		    
		  pdf.href = b.toString();
		  xls.href = b.toString();
		  txt.href = b.toString();
		  xml.href = b.toString();
		}
	]]></zscript>

		<listbox
			id="listbox"
			multiple="true"
			checkmark="true"
			onSelect="rejig();">
			<listitem label="A" />
			<listitem label="B" />
			<listitem label="C" />
			<listitem label="D" />
		</listbox>

		<h:p>		
		Check + uncheck items above to change href values of items below.
		The following item labels are NOT modified and these items cannot shift by 1 space.
		</h:p>

		<toolbar>
			<toolbarbutton
				id="pdf"
				href="xx"
				label="PDF" />
			<toolbarbutton
				id="xls"
				href="xx"
				label="XLS" />
			<toolbarbutton
				id="txt"
				href="xx"
				label="TXT" />
			<toolbarbutton
				id="xml"
				href="xx"
				label="XML" />
		</toolbar>
	</window>
</zk>
