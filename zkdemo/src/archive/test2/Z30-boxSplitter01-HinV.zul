<zk>
	<window border="normal" title="hbox in vbox and splitter">
		<vbox spacing="0" width="100%">
				<hbox width="100%" height="100%">
					cdacdacdacda
					<splitter id="hs" collapse="after"/>
					cdaccdacdacda
				</hbox>
			<splitter id="vs" collapse="before"/>
			cdacdacdacda
		</vbox>
		VBOX-Splitter
		<radiogroup>
			<attribute name="onCheck">
				vs.setCollapse(self.selectedItem.label);
			</attribute>
			<radio selected="true" label="none"/>
			<radio label="before"/>
			<radio label="after"/>
		</radiogroup>
		HBOX-Splitter
		<radiogroup>
			<attribute name="onCheck">
				hs.setCollapse(self.selectedItem.label);
			</attribute>
			<radio selected="true" label="none"/>
			<radio label="before"/>
			<radio label="after"/>
		</radiogroup>
	</window>
</zk>