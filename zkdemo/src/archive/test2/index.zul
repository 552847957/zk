<zk xmlns:h="http://www.w3.org/1999/xhtml">
<h:script>
function newWindow(url){
	document.forms["newform"].action = url;
	document.forms["newform"].submit();
}
</h:script>
<h:form id="newform" target="_blank"/>
<window use="org.zkoss.zkdemo.test2.MainWindow" height="100%" >
	<window id="w1" width="760px">
	<groupbox mold="3d" width="98%" >
		<caption label="Filter"><button label="overlap" onClick='w1.setTitle("Filter");w1.doOverlapped();'/>
		<button label="embed" onClick='w1.setTitle("");w1.doEmbedded()'/></caption>
		<hbox>
			<vbox>
			File Name Filter:<textbox id="fnf" value="Z30"/>
			<hbox>
			<checkbox id="reg"/>Regular Expression
			</hbox>
			<hbox>
			<checkbox id="newb"/>Open in new Browser
			</hbox>
			</vbox>
			<listbox id="lb" mold="paging" pageSize="20" width="450px">
				<listhead>
					<listheader label="Name" width="70%"/>
					<listheader label="Date" width="30%"/>
				</listhead>
			</listbox>
		</hbox>
	</groupbox>
	</window>
	<window id="w2" border="normal" height="700px" width="100%">
	<iframe  id="ifr" height="700px"  width="98%"/>
	</window>
</window>
</zk>