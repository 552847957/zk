<window title="Test if setSelectedItem change page correctly">
	<zscript><![CDATA[
	ListModelList mymodel = new ListModelList();
	for (int j=0; j < 30; ++j) {
		mymodel.add("item"+j);
	}
	]]></zscript>
	<listbox mold="paging" pageSize="22" id="lbx" model="${mymodel}">
	</listbox>
	<button label="select item 21 (last of the first page)" onClick="lbx.setSelectedIndex(21)"/>
	<button label="select item 22 (first of the second page)" onClick="lbx.setSelectedIndex(22)"/>
	<button label="select item 29 (last)" onClick="lbx.setSelectedIndex(29)"/>
</window>