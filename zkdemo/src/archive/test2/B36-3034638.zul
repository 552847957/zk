<zk>
	Please check the checkbox and uncheck the checkbox, you should see the font style is bold and non-bold.
	<listbox>
		<listitem>
			<listcell id="lc" label="listcell"/>
		</listitem>
	</listbox>
	<textbox id="lc1" value="listcell"/>
	<checkbox>
		<attribute name="onCheck">
			<![CDATA[
				if (self.isChecked()) {

                                            	 lc.setStyle("font-weight:bold");

                                            	 lc1.setStyle("font-weight:bold");
                                             } else {

                                            	 lc.setStyle(null);

                                            	 lc1.setStyle(null);
                                             }
			]]>
		</attribute>
	</checkbox>
</zk>

