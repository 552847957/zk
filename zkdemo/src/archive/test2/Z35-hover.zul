<window title="Button Hover Test" border="normal">
	<vbox>
<button id="b" label="Left" image="/img/m1.gif" hoverImage="/img/m2.gif" width="125px"/>
<button label="Right" image="/img/m2.gif" hoverImage="/img/m3.gif" dir="reverse" width="125px"/>
<button label="Above" image="/img/folder.gif" orient="vertical" width="125px"/>
<button label="Below" image="/img/folder.gif" orient="vertical" dir="reverse" width="125px"/>
	</vbox>
	<separator/>
	<zscript>
	import org.zkoss.image.*;
	</zscript>
	<button label="change 1st button's face"
		onClick='b.setImageContent(new AImage("t", desktop.webApp.getResourceAsStream("/img/folder.gif")))'/>
	<button label="change 1st button's hover"
		onClick='b.setHoverImageContent(new AImage("t", desktop.webApp.getResourceAsStream("/img/m3.gif")))'/>
</window>
