<language-addon>
	<!-- The name of this addon. It must be unique -->
	<addon-name>ZkFlash</addon-name>
	<!-- Specifies what other addon this depends
	<depends></depends>
	-->

	<version>
		<version-class>org.zkoss.flash.Version</version-class>
		<version-uid>0.8.1</version-uid>
		<zk-version>2.3</zk-version><!-- or later -->
	</version>
	
	<!-- Which language this addon will be added to -->
	<language-name>xul/html</language-name>

	<!-- [Optional, Multiple] Define a JavaScript module.
		Change the version if JS files are modified, such that
		browsers will reload them. -->
	<zscript language="Java">
	import org.zkoss.zul.*;
	</zscript>	

	<zscript language="JavaScript">
	importPackage(import org.zkoss.zul.*);
	</zscript>


	<component>
		<component-name>youtube</component-name>
		<component-class>org.zkoss.flash.Youtube</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zul/html/flash.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>xspfPlayer</component-name>
		<component-class>org.zkoss.flash.XspfPlayer</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zul/html/xspfPlayer.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>odeo</component-name>
		<component-class>org.zkoss.flash.Odeo</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zul/html/odeo.dsp</mold-uri>
		</mold>
	</component>
</language-addon>
