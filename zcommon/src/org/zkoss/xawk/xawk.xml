<xawk>
	<rule>
		<pattern>/init</pattern>
		<end>xawk.init = the.text;</end>
	</rule>
	<rule>
		<pattern>/cleanup</pattern>
		<end>xawk.cleanup = the.text;</end>
	</rule>

	<rule>
		<pattern>/begin</pattern>
		<end>xawk.begin = the.text;</end>
	</rule>
	<rule>
		<pattern>/end</pattern>
		<end>xawk.end = the.text;</end>
	</rule>
	<rule>
		<pattern>/condition</pattern>
		<end>xawk.condition = the.text;</end>
	</rule>

	<rule>
		<pattern>/xawk/rule</pattern>
		<begin>
			patterns = new LinkedList();
			condition = begin = end = null;
		</begin>
		<end>xawk.addRule(patterns, begin, end);</end>
	</rule>
	<rule>
		<pattern>/xawk/rule/pattern</pattern>
		<end>patterns.add(the.text);</end>
	</rule>
	<rule>
		<pattern>/xawk/rule/condition</pattern>
		<end>condition = the.text;</end>
	</rule>
	<rule>
		<pattern>/xawk/rule/begin</pattern>
		<end>begin = the.text;</end>
	</rule>
	<rule>
		<pattern>/xawk/rule/end</pattern>
		<end>end = the.text;</end>
	</rule>
</xawk>
