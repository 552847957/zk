<language>
	<language-name>yui</language-name>
	<device-type>ajax</device-type>
	<namespace>http://www.zkoss.org/2007/yui</namespace>		
	<extension>yui</extension>

	<version>
		<version-class>org.zkforge.yuiext.Version</version-class>
		<version-uid>0.6.1</version-uid>
		<zk-version>3.0.0</zk-version><!-- or later -->
	</version>

	<!-- [Optional, Multiple] Define a JavaScript module.
		Change the version if JS files are modified, such that
		browsers will reload them. -->
	<javascript src="~./js/ext/prototype/prototype.js" charset="UTF-8"/>
	<javascript src="~./js/ext/aculo/effects.js" charset="UTF-8"/>
	<javascript src="~./js/ext/aculo/dragdrop.js" charset="UTF-8"/>
	<javascript src="~./js/zk/html/boot.js" charset="UTF-8"/>
	<javascript src="~./js/zk/html/lang/mesg*.js" charset="UTF-8"/>
	<javascript src="~./js/zk/html/common.js" charset="UTF-8"/>
	<javascript src="~./js/zk/html/au.js" charset="UTF-8"/>
	<javascript src="~./js/zk/locale.js.dsp" charset="UTF-8"/>

	<javascript-module name="yuiextz.grid" version="0.6.1"/>
	<javascript-module name="yuiextz.layout" version="0.6.1"/>

	<!-- The higher the number, the earlier this addon is loaded.
		Default: 0
	<priority>0</priority>
	-->
	
	<zscript language="Java">
	import org.zkforge.yuiext.*;
	import org.zkforge.yuiext.grid.*;
	import org.zkforge.yuiext.layout.*;
	</zscript>	

	<zscript language="JavaScript">
	importPackage(Packages.org.zkforge.yuiext);
	importPackage(Packages.org.zkforge.yuiext.grid);
	importPackage(Packages.org.zkforge.yuiext.layout);
	</zscript>

	<!-- Groovy "forgot" what are imported, so we have to import each time
	-->
	<zscript language="Groovy" each-time="true">
	import org.zkforge.yuiext.*;
	import org.zkforge.yuiext.grid.*;
	import org.zkforge.yuiext.layout.*;
	</zscript>

	<zscript language="Ruby">
	require 'java'
	module Java
		include_package 'org.zkforge.yuiext'
		include_package 'org.zkforge.yuiext.grid'
		include_package 'org.zkforge.yuiext.layout'
	end
	</zscript>
	
	<!-- 
		Note: '~./' means it is located in the class path starting from
		'/metainfo/web'. For example, '~./img/abc.gif' means abc.gif located
		at '/metainfo/web/img'.
	-->
	<mold>
		<mold-name>desktop</mold-name>
		<mold-uri>~./zul/html/desktop.dsp</mold-uri>
	</mold>
	<mold>
		<mold-name>page</mold-name>
		<mold-uri>~./zul/html/page.dsp</mold-uri>
	</mold>
	
	<!-- Defines the component and attribute names used to represent
	a label when a plain text is found in Yui.
	-->
	<label-template>
		<component-name>label</component-name>
		<component-attribute>value</component-attribute>
	</label-template>
	
	<component>
		<component-name>grid</component-name>
		<component-class>org.zkforge.yuiext.grid.Grid</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.GridDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/grid.dsp</mold-uri>-->
		</mold>
		<annotation>
			<annotation-name>default-bind</annotation-name>
			<property-name>model</property-name>
			<attribute>
				<attribute-name>converter</attribute-name>
				<attribute-value>org.zkoss.zkplus.databind.ListModelConverter</attribute-value>
			</attribute>
		</annotation>
		<annotation>
			<annotation-name>default-bind</annotation-name>
			<property-name>selectedItem</property-name>
			<attribute>
				<attribute-name>save-when</attribute-name>
				<attribute-value>self.onSelect</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>load-when</attribute-name>
				<attribute-value>self.onInitRender</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>access</attribute-name>
				<attribute-value>both</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>converter</attribute-name>
				<attribute-value>org.zkforge.yuiext.zkplus.databind.SelectedItemConverter</attribute-value>
			</attribute>
		</annotation>
	</component>
	<component>
		<component-name>columns</component-name>
		<component-class>org.zkforge.yuiext.grid.Columns</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.ColumnsDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/columns.dsp</mold-uri> -->
		</mold>
	</component>
	<component>
		<component-name>column</component-name>
		<component-class>org.zkforge.yuiext.grid.Column</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.ColumnDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/column.dsp</mold-uri> -->
		</mold>
	</component>
	<component>
		<component-name>rows</component-name>
		<component-class>org.zkforge.yuiext.grid.Rows</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.RowsDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/rows.dsp</mold-uri> -->
		</mold>
	</component>
	<component>
		<component-name>row</component-name>
		<component-class>org.zkforge.yuiext.grid.Row</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.RowDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/row.dsp</mold-uri> -->
		</mold>
	</component>
	
	<component>
		<component-name>label</component-name>
		<component-class>org.zkforge.yuiext.grid.Label</component-class>
		<annotation>
			<annotation-name>default-bind</annotation-name>
			<property-name>value</property-name>
			<attribute>
				<attribute-name>access</attribute-name>
				<attribute-value>both</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>save-when</attribute-name>
				<attribute-value>self.onChange</attribute-value>
			</attribute>
		</annotation>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.LabelDefault</mold-uri>
			<!-- <mold-uri>~./zul/html/label.dsp</mold-uri> -->
		</mold>
	</component>
	
	<component>
		<component-name>listbox</component-name>
		<component-class>org.zkforge.yuiext.grid.Listbox</component-class>		
		<annotation>
			<annotation-name>default-bind</annotation-name>
			<property-name>model</property-name>
			<attribute>
				<attribute-name>converter</attribute-name>
				<attribute-value>org.zkoss.zkplus.databind.ListModelConverter</attribute-value>
			</attribute>
		</annotation>
		<annotation>
			<annotation-name>default-bind</annotation-name>
			<property-name>selectedItem</property-name>
			<attribute>
				<attribute-name>save-when</attribute-name>
				<attribute-value>self.onSelect</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>load-when</attribute-name>
				<attribute-value>self.onInitRender</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>access</attribute-name>
				<attribute-value>both</attribute-value>
			</attribute>
			<attribute>
				<attribute-name>converter</attribute-name>
				<attribute-value>org.zkoss.zkplus.databind.SelectedItemConverter</attribute-value>
			</attribute>
		</annotation>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.ListboxDefault</mold-uri>
			<!-- <mold-uri>~./zul/html/listbox.dsp</mold-uri> -->
		</mold>
		<mold>
			<mold-name>select</mold-name>			
			<mold-uri>class:org.zkforge.yuiext.render.ListboxSelect</mold-uri>
			<!-- <mold-uri>~./zul/html/listbox-select.dsp</mold-uri> -->
		</mold>
		<mold>
			<mold-name>paging</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.ListboxPaging</mold-uri>
			<!-- <mold-uri>~./zul/html/listbox-pg.dsp</mold-uri> -->
		</mold>
	</component>
	<component>
		<component-name>image</component-name>
		<component-class>org.zkforge.yuiext.grid.Image</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.ImageDefault</mold-uri>
			<!-- <mold-uri>~./zul/html/image.dsp</mold-uri> -->
		</mold>
		<mold>
			<mold-name>alphafix</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.ImageDefault</mold-uri>
			<!-- <mold-uri>~./zul/html/image.dsp</mold-uri> -->
		</mold>
	</component>
	
	<!--  layout component -->	
	<component>
		<component-name>borderlayout</component-name>
		<component-class>org.zkforge.yuiext.layout.Borderlayout</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.BorderlayoutDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/borderlayout.dsp</mold-uri> -->
		</mold>
	</component>	
	<component>
		<component-name>contentpanel</component-name>
		<component-class>org.zkforge.yuiext.layout.Contentpanel</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.ContentpanelDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/contentpanel.dsp</mold-uri> -->
		</mold>
	</component>	
	<component>
		<component-name>nestedpanel</component-name>
		<component-class>org.zkforge.yuiext.layout.Nestedpanel</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.NestedpanelDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/nestedpanel.dsp</mold-uri> -->
		</mold>
	</component>	
	<component>
		<component-name>north</component-name>
		<component-class>org.zkforge.yuiext.layout.North</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.BorderlayoutRegionDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/borderlayoutregion.dsp</mold-uri> -->
		</mold>
	</component>	
	<component>
		<component-name>south</component-name>
		<component-class>org.zkforge.yuiext.layout.South</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.BorderlayoutRegionDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/borderlayoutregion.dsp</mold-uri> -->
		</mold>
	</component>
	<component>
		<component-name>west</component-name>
		<component-class>org.zkforge.yuiext.layout.West</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.BorderlayoutRegionDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/borderlayoutregion.dsp</mold-uri> -->
		</mold>
	</component>
	<component>
		<component-name>east</component-name>
		<component-class>org.zkforge.yuiext.layout.East</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>class:org.zkforge.yuiext.render.BorderlayoutRegionDefault</mold-uri>
			<!-- <mold-uri>~./yuiextz/borderlayoutregion.dsp</mold-uri> -->
		</mold>
	</component>
	<component>
		<component-name>center</component-name>
		<component-class>org.zkforge.yuiext.layout.Center</component-class>
		<mold>
			<mold-name>default</mold-name>
