<language-addon>
	<!-- The name of this addon. It must be unique -->
	<addon-name>zulex</addon-name>
	<!-- Specifies what other addon this depends
	<depends></depends>
	-->

	<!-- Which language this addon will be added to -->
	<language-name>xul/html</language-name>
	
	<stylesheet href="~./zulex/css/layout.css.dsp" type="text/css"/>
	
	<version>
		<version-class>org.zkoss.zulex.Version</version-class>
		<version-uid>3.0.0</version-uid>
		<zk-version>3.0.0</zk-version><!-- or later -->
	</version>

	<component>
		<component-name>captcha</component-name>
		<extends>captcha</extends>

		<custom-attribute>
			<attribute-name>captcha-engine</attribute-name>
			<attribute-value>org.zkoss.zulex.impl.JHLabsCaptchaEngine</attribute-value>
		</custom-attribute>
	</component>
	<component>
		<component-name>chart</component-name>
		<extends>chart</extends>

		<custom-attribute>
			<attribute-name>chart-engine</attribute-name>
			<attribute-value>org.zkoss.zulex.impl.JFreeChartEngine</attribute-value>
		</custom-attribute>
	</component>
	<component>
		<component-name>borderlayout</component-name>
		<component-class>org.zkoss.zulex.Borderlayout</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zulex/html/borderlayout.dsp</mold-uri>
		</mold>
	</component>	
	<component>
		<component-name>north</component-name>
		<component-class>org.zkoss.zulex.North</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zulex/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>	
	<component>
		<component-name>south</component-name>
		<component-class>org.zkoss.zulex.South</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zulex/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>west</component-name>
		<component-class>org.zkoss.zulex.West</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zulex/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>east</component-name>
		<component-class>org.zkoss.zulex.East</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zulex/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>center</component-name>
		<component-class>org.zkoss.zulex.Center</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zulex/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>
</language-addon>
