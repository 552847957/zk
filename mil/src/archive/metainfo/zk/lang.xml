<?xml version="1.0" encoding="UTF-8"?>
<!-- lang.xml
	Purpose:
		A definition of the mil language for ZK
	Description:
		
	Note:
	 1. Properties defined here are assigned to all instances of the
		specified definition, no matter it is created by ZUML or by program.
	History:
		Mon May 28 14:20:14     2007, Created by henrichen

Copyright (C) 2005 Potix Corporation. All Rights Reserved.
-->
<language>
	<language-name>mil</language-name>
	<device-type>mil</device-type>
	<namespace>http://www.zkoss.org/2007/mil</namespace>
	<extension>mil</extension>

	<version>
		<version-class>org.zkoss.mil.Version</version-class>
		<version-uid>0.8.7</version-uid>
		<zk-version>3.0.0</zk-version><!-- or later -->
	</version>

	<!-- To have better performance with BeanShell, import most-common later -->
	<zscript language="Java">
	import java.util.*;
	import java.lang.*;
	import org.zkoss.zk.ui.util.Clients;
	import org.zkoss.zk.ui.event.*;
	import org.zkoss.zk.ui.*;
	import org.zkoss.mil.*;
	import org.zkoss.mil.device.MilDevice;
<!-- 
	void alert(String m) {
		Messagebox.show(m);
	}
-->
	</zscript>

	<zscript language="JavaScript">
	importPackage(Packages.java.util);
	importPackage(Packages.java.lang);
	importClass(Packages.org.zkoss.zk.ui.util.Clients);
	importPackage(Packages.org.zkoss.zk.ui.event);
	importPackage(Packages.org.zkoss.zk.ui);
	importPackage(Packages.org.zkoss.mil);
	importClass(Packages.org.zkoss.mil.device.MilDevice);
<!-- 
	function alert(m) {
		Messagebox.show(m);
	}
-->
	</zscript>

	<!-- Groovy "forgot" what are imported, so we have to import each time
	-->
	<zscript language="Groovy" each-time="true">
	import java.util.*
	import java.lang.*
	import org.zkoss.zk.ui.util.Clients
	import org.zkoss.zk.ui.event.*
	import org.zkoss.zk.ui.*
	import org.zkoss.mil.*
	import org.zkoss.mil.device.MilDevice;
	</zscript>
	<zscript language="Groovy">
	alert = {m -> Messagebox.show(m)}
	</zscript>

	<zscript language="Ruby">
	require 'java'
	module Java
		include_package 'java.util'
		include_package 'java.lang'
		include_class 'org.zkoss.zk.ui.util.Clients'
		include_package 'org.zkoss.zk.ui.event'
		include_package 'org.zkoss.zk.ui'
		include_package 'org.zkoss.mil'
		include_class 'org.zkoss.mil.device.MilDevice'
	end
<!--	
	def alert (m)
		Java::Messagebox.show m
	end
-->
	</zscript>

	<!-- 
		Note: '~./' means it is located in the class path starting from
		'/metainfo/web'. For example, '~./img/abc.gif' means abc.gif located
		at '/metainfo/web/img'.
	-->
	<mold>
		<mold-name>desktop</mold-name>
		<mold-uri>~./mil/rmil/desktop.dsp</mold-uri>
	</mold>
	<mold>
		<mold-name>page</mold-name>
		<mold-uri>~./mil/rmil/page.dsp</mold-uri>
	</mold>

	<!-- Defines the component and attribute names used to represent
	a label when a plain text is found in ZUL XML.
	-->
	<label-template>
		<component-name>label</component-name>
		<component-attribute>value</component-attribute>
	</label-template>

	<component>
		<component-name>command</component-name>
		<component-class>org.zkoss.mil.Command</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/command.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>datebox</component-name>
		<component-class>org.zkoss.mil.Datebox</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/datebox.dsp</mold-uri>
		</mold>
		<mold>
			<mold-name>date</mold-name>
			<mold-uri>~./mil/rmil/datebox.dsp</mold-uri>
		</mold>
		<mold>
			<mold-name>time</mold-name>
			<mold-uri>~./mil/rmil/datebox.dsp</mold-uri>
		</mold>
		<mold>
			<mold-name>date_time</mold-name>
			<mold-uri>~./mil/rmil/datebox.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>decimalbox</component-name>
		<component-class>org.zkoss.mil.Decimalbox</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/textbox.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>frame</component-name>
		<component-class>org.zkoss.mil.Frame</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/frame.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>intbox</component-name>
		<component-class>org.zkoss.mil.Intbox</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/textbox.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>listbox</component-name>
		<component-class>org.zkoss.mil.Listbox</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/listbox.dsp</mold-uri>
		</mold>

		<mold>
			<mold-name>select</mold-name>
			<mold-uri>~./mil/rmil/listbox.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>listitem</component-name>
		<component-class>org.zkoss.mil.Listitem</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/listitem.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>image</component-name>
		<component-class>org.zkoss.mil.Image</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/image.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>label</component-name>
		<component-class>org.zkoss.mil.Label</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/label.dsp</mold-uri>
		</mold>
	</component>

	<component>
		<component-name>textbox</component-name>
		<component-class>org.zkoss.mil.Textbox</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./mil/rmil/textbox.dsp</mold-uri>
		</mold>
	</component>

</language>