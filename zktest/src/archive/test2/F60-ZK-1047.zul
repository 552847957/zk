<zk>
	<div>The content of block one (green) and block two (brown) should the same.</div>
	<zscript><![CDATA[
		import java.math.BigDecimal;
		int num1 = 12345;
		BigDecimal num2 = new BigDecimal("12345678901234.345678");
		double num3 = 12345.2345678;

		String f1 = "##,###.##";
		String f2 = "##,###.###";
		String f3 = "##,###.#####";
		String f4 = "##,###.######";
		String f5 = "%##,###.######";
		String f6 = "¤##,###.##";

		String df1 = "yyyy-MM-dd";
		String df2 = "yyyy // MM -- dd";
		Date d1 = new Date();
		String ds1 = "2010 // 02 -- 03";

		String ns1 = "12,345";
		String ns2 = "$12,345";
		String ns3 = "%1,234,587.6543";

		String percentage = f3 + " \u2030"; // %
		String currency = "\u00A4 " + f4; // ¤

		Locale l1 = Locale.ITALIAN;
		Locale l2 = Locale.JAPAN;
		Locale l3 = Locale.GERMAN;
		Locale l4 = Locale.FRANCE;
		
		]]></zscript>
	<hbox>
		<vbox>
			<div> int .2f </div>
			<div> BigDecimal .2f </div>
			<div> double .2f </div>
			<div> double .3f </div>
			<div> double .5f Currency </div>
			<div> double .6f Percentage </div>
		</vbox>
		<vbox>
			<label value="${c:formatNumber(num1, f1)}" />
			<label value="${c:formatNumber(num2, f1)}" />
			<label value="${c:formatNumber(num3, f1)}" />
			<label value="${c:formatNumber(num3, f2)}" />
			<label value="${c:formatNumber(num3, percentage)}" />
			<label value="${c:formatNumber(num3, currency)}" />
			<intbox value="${c:parseNumber(ns1, f1)}" />
			<intbox value="${c:parseNumber(ns2, f6)}" />
			<doublebox value="${c:parseNumber(ns3, f5)}" />

			<label value="${c:formatDate(d1, df1)}" />
			<datebox value="${c:parseDate(ds1, df2)}" />
		</vbox>
	</hbox>
</zk>