<language-addon>
	<!-- The name of this addon. It must be unique -->
	<addon-name>zkmax</addon-name>
	<!-- Specifies what other addon this depends-->
	<depends>zkex</depends>	

	<!-- Which language this addon will be added to -->
	<language-name>xul/html</language-name>
	
	<stylesheet href="~./zkmax/css/zkmax*.css.dsp*" type="text/css"/>

	<version>
		<version-class>org.zkoss.zkmax.Version</version-class>
		<version-uid>5.0.0</version-uid>
		<zk-version>5.0.0</zk-version><!-- or later -->
	</version>

	<!-- Interpreters -->
	<zscript language="Java">
	import org.zkoss.zkex.zul.*;
	import org.zkoss.zkmax.zul.*;
	</zscript><!-- the later the import, the higher the priority -->
	<zscript language="JavaScript">
	importPackage(Packages.org.zkoss.zkex.zul);
	importPackage(Packages.org.zkoss.zkmax.zul);
	</zscript>
	<!-- Groovy "forgot" what are imported, so we have to import each time
	-->
	<zscript language="Groovy" each-time="true">
	import org.zkoss.zkex.zul.*
	import org.zkoss.zkmax.zul.*
	</zscript>
	<zscript language="Ruby">
	module Java
		include_package 'org.zkoss.zkex.zul'
		include_package 'org.zkoss.zkmax.zul'
	end
	</zscript>
		<zscript language="Python">
import org.zkoss.zkex.zul
import org.zkoss.zkmax.zul
	</zscript>

	<component>
		<component-name>portallayout</component-name>
		<component-class>org.zkoss.zkmax.zul.Portallayout</component-class>
		<widget-class>zkmax.layout.Portallayout</widget-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/portallayout.js</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>portalchildren</component-name>
		<component-class>org.zkoss.zkmax.zul.Portalchildren</component-class>
		<widget-class>zkmax.layout.Portalchildren</widget-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/portalchildren.js</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>tablechildren</component-name>
		<component-class>org.zkoss.zkmax.zul.Tablechildren</component-class>
		<widget-class>zkmax.layout.Tablechildren</widget-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/tablechildren.js</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>tablelayout</component-name>
		<component-class>org.zkoss.zkmax.zul.Tablelayout</component-class>
		<widget-class>zkmax.layout.Tablelayout</widget-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/tablelayout.js</mold-uri>
		</mold>
	</component>	
</language-addon>
