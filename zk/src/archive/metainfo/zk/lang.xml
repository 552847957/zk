<language>
	<language-name>xml</language-name>
	<device-type>xml</device-type>
	<namespace>http://www.zkoss.org/2007/xml</namespace>
	<extension>xml</extension><!-- the first extension is the major one -->

	<version>
		<version-class>org.zkoss.zk.Version</version-class>
		<version-uid>2.5.0</version-uid>
	</version>

	<!-- Indicates all tags are from a native namespace.
		They are represented by as few as native components.
	 -->
	<native-namespace>true</native-namespace>

	<!-- 
		Note: '~./' means it is located in the class path starting from
		'/metainfo/web'. For example, '~./img/abc.gif' means abc.gif located
		at '/metainfo/web/img'.
	-->
	<mold>
		<mold-name>desktop</mold-name>
		<mold-uri>~./zk/xml/desktop.dsp</mold-uri>
	</mold>
	<mold>
		<mold-name>page</mold-name>
		<mold-uri>~./zk/xml/page.dsp</mold-uri>
	</mold>

	<!-- Defines the templat for macro components -->
	<macro-template>
		<macro-class>org.zkoss.zk.ui.XmlMacroComponent</macro-class>
		<macro-uri>~./zk/xml/macro.dsp</macro-uri>
	</macro-template>
	<!-- Defines the template for the Native namespace
		[Optional] Define it only if the Native namespace is supported.
	-->
	<native-template>
		<native-class>org.zkoss.zk.ui.XmlNativeComponent</native-class>
	</native-template>
</language>
