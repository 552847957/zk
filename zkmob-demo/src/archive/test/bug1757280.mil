<?xml version='1.0' encoding='UTF-8'?>
<frame title="Listbox demo"  visible="true" onCommand="MilDevice.goHome(null)">
	Select an item and change its label.
	<listbox id="lbx1" label="drop down" widthHint="expand">
		<attribute name="onSelect">
			self.getSelectedItem().setLabel("setlabel");
		</attribute>
		<listitem label="item1"/>
		<listitem label="item2"/>
	</listbox>
	<command label="Home" type="back"/>
</frame>