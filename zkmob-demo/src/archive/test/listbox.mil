<?xml version='1.0' encoding='UTF-8'?>
<frame title="Listbox demo"  visible="true">
	<zscript>
	int k = 0;
	</zscript>
	<attribute name="onCommand">
		String id = event.getCommand().getId();
		if ("add".equals(id)) {
			lbx2.appendItem("itemX"+(k++), "itemX value");
		} else if ("home".equals(id)) {
			MilDevice.goHome(null);
		} else {
			Executions.sendRedirect("/test/"+event.getCommand().getLabel()+".mil");
		}
	</attribute>

	<listbox id="lbx1" label="drop down" mold="select" widthHint="expand">
		<listitem label="item1" image="/img/bluerect.png"/>
		<listitem label="item2" image="/img/bluerect.png"/>
		<listitem label="item3" image="/img/bluerect.png"/>
		<listitem label="item4" image="/img/bluerect.png"/>
	</listbox>
	<listbox id="lbx2" label="Choice Group" widthHint="expand">
		<listitem label="item1"/>
		<listitem label="item2"/>
	</listbox>
	
	<command id="add" label="add" type="ok"/>
	<command id="home" label="Home" type="back"/>

	<command label="hello" type="ok"/>
	<command label="label" type="ok"/>
	<command label="onchanging" type="ok"/>
	<command label="listbox" type="ok"/>
	<command label="datebox" type="ok"/>
	<command label="intbox" type="ok"/>
	<command label="decimalbox" type="ok"/>
</frame>